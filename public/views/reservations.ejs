<!--puts the form within a container. checkout http://materializecss.com/grid.html -->

    <form class="container" method="POST" action="/reservation/reservations">
      <div class="row">
            <!-- input field for first name-->
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="firstName" type="text" class="validate" required="" aria-required="true" name="firstName">
          <label for="firstName">First Name</label>
        </div>
        <!-- input field for last name-->
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="lastName" type="text" class="validate" required="" aria-required="true" name="lastName">
          <label for="lastName">Last Name</label>
        </div>
      </div>

        <div class="row">
          <!-- input field for Phone number-->
          <div class="input-field col s6">
            <i class="material-icons prefix">phone</i>
            <input id="phoneNumber" type="tel" class="validate" required="" aria-required="true" pattern="^\d{3}-\d{3}-\d{4}$" name="phoneNumber">
            <label for="phoneNumber">Telephone(format: xxx-xxx-xxxx)</label>
          </div>
            <!-- input field for email-->
            <div class="input-field col s6">
              <i class="material-icons prefix">markunread_mailbox</i>
              <input type="email" id="email" type="tel" class="validate" required="" aria-required="true" name="email">
              <label for="email">Email</label>
            </div>
          </div>


      <div class="row">
          <!-- dropdown menu for location -->
        <div class="input-field col s6 m6">
          <i class="material-icons prefix">add_location</i>
          <select id="location" name="location" required="" aria-required="true">
            <option value="" disabled selected>Choose your Location</option>
            <option value="Lake Oconee">Lake Oconee</option>
            <option value="Lake Sinclair">Lake Sinclair</option>
          </select>
        </div>

      <!-- dropdown menu for Vehicle type -->
        <div class="input-field col s6 m6">
          <i class="material-icons prefix">directions_boat</i>
          <select id ="vehicle" name="vehicle" required="" aria-required="true">
            <option value="" disabled selected>Choose your Vehicle</option>
            <option value="Pontoon">Pontoon</option>
            <option value="Ski Boat">Ski Boat</option>
            <option value="Jetski">Jetski</option>
          </select>
        <!--  <label>Vehicle</label>--> <!-- took this out until it can be added well aesthetically -->
        </div>
      </div>





      <!-- date picker for the reservation. -->
      <div class="row">
        <!--START DATE-->
      <i class="material-icons prefix">event</i>
      <label for="startDate" class="active">Reservation Date</label>
      <input id="startDate" name="startDate" type="text" class="datepicker" readonly="" tabindex="-1" aria-haspopup="true" aria-expanded="false" aria-readonly="false" aria-owns="startDate" required>


        <!--END DATE
      <i class="material-icons prefix">event</i>
      <label for="endDate" class="active">End Date</label>
      <input id="endDate" name="endDate" type="date" class="datepicker" readonly="" tabindex="-1" aria-haspopup="true" aria-expanded="false" aria-readonly="false" aria-owns="endDate">
    </div>
  -->


      <!-- time picker -->
      <!-- Start timer-->
      <div class="row">
        <i class="material-icons prefix">access_time</i>
        <label for="startTime" class="active">Start Time</label>
          <input id="startTime" name="startTime" type="text" class="timepicker" readonly="" tabindex="-1" aria-haspopup="true" aria-expanded="false" aria-readonly="false" aria-owns="startTime" >

          <!-- End timer-->
        <i class="material-icons prefix">access_time</i>
        <label for="endTime" class="active">End Time</label>
            <input id="endTime" name="endTime" type="text" class="timepicker" readonly="" tabindex="-1" aria-haspopup="true" aria-expanded="false" aria-readonly="false" aria-owns="endTime">
        </div>



