         <tr ng-repeat="reservation in reservationslist">
           <td><input class="form-control" ng-model="reservation.firstName"></td>
           <td><input class="form-control" ng-model="reservation.lastName"></td>
           <td><input class="form-control" ng-model="reservation.email"></td>
           <td><input class="form-control" ng-model="reservation.phoneNumber"></td>

           <td><button class="btn btn-primary" ng-click="update()">Update</button></td>
           <td><button class="btn btn-info" ng-click="delete()">Delete</button></td>
         </tr>
